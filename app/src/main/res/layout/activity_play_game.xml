            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <LinearLayout
            android:id="@+id/health"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_bar_style"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/health_progress_bar"
                style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:maxHeight="50dp"
                android:minHeight="50dp"
                android:padding="2dp"
                android:progressDrawable="@drawable/progressbar"
                android:scrollbarSize="10dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnHealth"
            android:layout_width="@dimen/btn_round_bar_size"
            android:layout_height="@dimen/btn_round_bar_size"
            android:layout_marginEnd="@dimen/margin_game_bar"
            android:background="@drawable/round_bar_style"
            android:gravity="center"
            android:orientation="vertical"
            android:shadowColor="#000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="+"
            android:onClick="openHealth"
            android:textColor="@color/btn_round_bar_color"
            android:textSize="18sp" />

