<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LayoutClasses.Bank">
<!--    android:background="#303030">-->

    <Button
        android:id="@+id/btnHelp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round_bar_style"
        android:gravity="center"
        android:orientation="vertical"
        android:shadowColor="#000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="\?"
        android:textColor="@color/btn_round_bar_color"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/lead_buttons_style"
        android:drawableEnd="@drawable/btn_exit"
        android:gravity="center"
        android:onClick="menu"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:shadowColor="#000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="EXIT"
        android:textColor="@color/btn_round_bar_color"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/almendra"
        android:gravity="center"
        android:text="Bank"
        android:textSize="36sp"
        android:textColor="@color/black_text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#11899B"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/your_loan_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/credit"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_toStartOf="@+id/divider5"
        android:textColor="@color/black_text_color"
        android:fontFamily="@font/alef"
        android:text="TextView"
        android:textSize="@dimen/stocks_text_info_size"
        app:layout_constraintEnd_toStartOf="@+id/divider5"
        app:layout_constraintTop_toBottomOf="@+id/credit" />

    <TextView
        android:id="@+id/loan_you_can_take_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/your_loan_size"
        android:layout_alignEnd="@+id/your_loan_size"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/alef"
        android:textColor="@color/black_text_color"
        android:text="TextView"
        android:textSize="@dimen/stocks_text_info_size"
        app:layout_constraintEnd_toEndOf="@+id/your_loan_size"
        app:layout_constraintTop_toBottomOf="@+id/your_loan_size" />

    <TextView
        android:id="@+id/loan_interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loan_you_can_take"
        android:layout_alignStart="@+id/loan_you_can_take"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/alef"
        android:textColor="@color/black_text_color"
        android:text="loan interest: "
        android:textSize="@dimen/stocks_text_info_size"
        app:layout_constraintStart_toStartOf="@+id/loan_you_can_take"
        app:layout_constraintTop_toBottomOf="@+id/loan_you_can_take" />

    <TextView
        android:id="@+id/deposit_you_can_take"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/your_loan"
        android:layout_alignStart="@+id/your_loan"
        android:layout_marginTop="15dp"
        android:textColor="@color/black_text_color"
        android:fontFamily="@font/alef"
        android:text="you can invest: "
        android:textSize="@dimen/stocks_text_info_size"
        app:layout_constraintStart_toStartOf="@+id/deposit_interest"
        app:layout_constraintTop_toBottomOf="@+id/your_deposit" />

    <TextView
        android:id="@+id/loan_interest_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loan_you_can_take_size"
        android:layout_alignEnd="@+id/loan_you_can_take_size"
        android:textColor="@color/black_text_color"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/alef"
        android:text="TextView"
        android:textSize="@dimen/stocks_text_info_size"
        app:layout_constraintEnd_toEndOf="@+id/loan_you_can_take_size"
        app:layout_constraintTop_toBottomOf="@+id/loan_you_can_take_size" />

    <TextView
        android:id="@+id/your_loan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/credit"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@+id/credit"
        android:fontFamily="@font/alef"
        android:textColor="@color/black_text_color"
        android:text="your loan: "
        android:textSize="@dimen/stocks_text_info_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/credit" />

    <TextView
        android:id="@+id/credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/divider5"
        android:fontFamily="@font/lekton"
        android:text="Credit"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/divider5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/deposit_you_can_invest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deposit"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/deposit"
        android:fontFamily="@font/alef"
        android:textColor="@color/black_text_color"
        android:text="TextView"
        android:textSize="@dimen/stocks_text_info_size"
        app:layout_constraintEnd_toEndOf="@+id/your_deposit_size"
        app:layout_constraintTop_toBottomOf="@+id/your_deposit_size" />

    <TextView
        android:id="@+id/deposit_interest_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deposit_you_can_invest"
        android:layout_alignEnd="@+id/deposit_you_can_invest"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/alef"
        android:textColor="@color/black_text_color"
        android:text="TextView"
        android:textSize="@dimen/stocks_text_info_size"
        app:layout_constraintEnd_toEndOf="@+id/deposit_you_can_invest"
        app:layout_constraintTop_toBottomOf="@+id/deposit_you_can_invest" />

    <TextView
        android:id="@+id/deposit_interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loan_you_can_take"
        android:layout_alignStart="@+id/loan_you_can_take"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/alef"
        android:textColor="@color/black_text_color"
        android:text="deposit interest: "
        android:textSize="@dimen/stocks_text_info_size"
        app:layout_constraintStart_toStartOf="@+id/your_deposit"
        app:layout_constraintTop_toBottomOf="@+id/loan_you_can_take" />

    <TextView
        android:id="@+id/loan_you_can_take"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/your_deposit"
        android:layout_alignStart="@+id/your_deposit"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/alef"
        android:textColor="@color/black_text_color"
        android:text="you can take: "
        android:textSize="@dimen/stocks_text_info_size"
        app:layout_constraintStart_toStartOf="@+id/your_loan"
        app:layout_constraintTop_toBottomOf="@+id/your_loan" />

    <TextView
        android:id="@+id/your_deposit_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deposit_interest_size"
        android:layout_alignEnd="@+id/deposit_interest_size"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/alef"
        android:textColor="@color/black_text_color"
        android:text="TextView"
        android:textSize="@dimen/stocks_text_info_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deposit" />

    <TextView
        android:id="@+id/your_deposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deposit"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/divider5"
        android:fontFamily="@font/alef"
        android:textColor="@color/black_text_color"
        android:text="your deposit: "
        android:textSize="@dimen/stocks_text_info_size"
        app:layout_constraintStart_toEndOf="@+id/divider5"
        app:layout_constraintTop_toBottomOf="@+id/deposit" />

    <TextView
        android:id="@+id/deposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/divider5"
        android:fontFamily="@font/lekton"
        android:text="Deposit"
        android:textSize="24sp"
        android:textColor="@color/black_text_color"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <View
        android:id="@+id/divider5"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_below="@+id/divider3"
        android:layout_alignStart="@+id/divider3"
        android:layout_alignEnd="@+id/divider3"
        android:layout_alignBottom="@+id/deposit_interest"
        android:background="#B36161"
        app:layout_constraintBottom_toBottomOf="@+id/btn_make_deposit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/deposit" />

    <Button
        android:id="@+id/btn_take_credit"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/btn_return_credit"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/credit"
        android:background="@drawable/buttons_style_buy"
        android:text="take"
        android:onClick="takeCredit"
        android:textColor="#FAFAFA"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/loan_interest_size"
        app:layout_constraintTop_toTopOf="@+id/btn_return_credit" />

    <Button
        android:id="@+id/btn_return_credit"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@+id/loan_interest_size"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@+id/credit"
        android:background="@drawable/buttons_style_sell"
        android:text="return"
        android:textColor="#FAFAFA"
        android:textSize="15dp"
        android:onClick="returnCredit"
        app:layout_constraintStart_toStartOf="@+id/loan_interest"
        app:layout_constraintTop_toBottomOf="@+id/loan_interest" />

    <Button
        android:id="@+id/btn_take_deposit"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/btn_make_deposit"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/deposit"
        android:background="@drawable/buttons_style_buy"
        android:text="take"
        android:textColor="#FAFAFA"
        android:textSize="15dp"
        android:onClick="takeDeposit"
        app:layout_constraintEnd_toEndOf="@+id/deposit_interest_size"
        app:layout_constraintTop_toTopOf="@+id/btn_make_deposit" />

    <Button
        android:id="@+id/btn_make_deposit"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@+id/loan_interest_size"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@+id/deposit"
        android:background="@drawable/buttons_style_sell"
        android:text="give"
        android:textColor="#FAFAFA"
        android:textSize="15dp"
        android:onClick="makeDeposit"
        app:layout_constraintStart_toStartOf="@+id/deposit_interest"
        app:layout_constraintTop_toBottomOf="@+id/deposit_interest" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ImagineViewMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_game_bar"
            android:src="@drawable/money"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black_text_color"
            android:layout_marginEnd="5dp"
            android:text="money"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnMoney"
            android:layout_width="@dimen/btn_round_bar_size"
            android:layout_height="@dimen/btn_round_bar_size"
            android:layout_marginEnd="@dimen/margin_game_bar"
            android:background="@drawable/round_bar_style"
            android:gravity="center"
            android:orientation="vertical"
            android:shadowColor="#000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:onClick="openMoney"
            android:text="+"
            android:textColor="@color/btn_round_bar_color"
            android:textSize="18sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>